{
  "elements": [
    { "type": "ValidationTextBox", "name": "Host", "caption": "Encoder IP" },
    { "type": "NumberSpinner", "name": "Port", "caption": "Telnet Port", "minimum": 1, "maximum": 65535 },
    { "type": "CheckBox", "name": "UseCRLF", "caption": "CRLF senden (\\r\\n)" },

    { "type": "NumberSpinner", "name": "RegistryInstanceID", "caption": "Registry InstanceID", "minimum": 0, "maximum": 999999 },

    { "type": "ValidationTextBox", "name": "SourceName", "caption": "SourceName (global eindeutig, ideal = WebName)" },

    { "type": "NumberSpinner", "name": "VideoChannel", "caption": "Video Channel", "minimum": 0, "maximum": 9999 },
    { "type": "NumberSpinner", "name": "AudioChannel", "caption": "Audio Channel", "minimum": 0, "maximum": 9999 },
    { "type": "NumberSpinner", "name": "USBChannel", "caption": "USB Channel", "minimum": 0, "maximum": 9999 },

    { "type": "CheckBox", "name": "AutoAssignFromSchema", "caption": "Auto-Assign nach Schema (NextFree Index)" }
  ],
  "actions": [
    { "type": "Button", "caption": "WebName lesen (astparam g webname)", "onClick": "JAPMC_ReadWebName($id);" },
    { "type": "Button", "caption": "Channels anwenden", "onClick": "JAPMC_ApplyChannels($id);" },
    { "type": "Label", "caption": "Tipp: Bei Auto-Assign werden Channels gesetzt, wenn sie 0 sind und eine Registry konfiguriert ist." }
  ]
}
